<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
<style name="simpleButton" parent="Widget.AppCompat.Button.Borderless">
    <item name="android:layout_margin">10sp</item>
    <item name="android:layout_width">75sp</item>
    <item name="android:layout_height">75sp</item>
    <item name="android:textSize">35sp</item>
    <item name="fontFamily">sans-serif</item>
</style>
    <style name="simpleButton.Primary">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="simpleButton.Secondary">
        <item name="android:textColor">#b2b5ba</item>
    </style>
    <style name="simpleButton.Secondary.calculationButton">
        <item name="android:background">@drawable/circle_button</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_width">50sp</item>
        <item name="android:layout_height">50sp</item>
    </style>
    <style name="simpleButton.Secondary.calculationButton.Equal">
        <item name="background">@drawable/circle_button</item>
        <item name="backgroundTint">#ad2829</item>
    </style>
</resources>
